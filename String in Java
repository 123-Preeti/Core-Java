class Person {
    String name;

    Person(String name) {
        this.name = name;
    }

    public String toString() {
        return "Name: " + name;
    }
}

public class Main {
    public static void main(String[] args) {
        Person p = new Person("Preeti");
        System.out.println(p);
    }
}
